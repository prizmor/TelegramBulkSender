{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=tg_bulk;User=root;Password=password;"
  },
  "Jwt": {
    "Secret": "change_me_to_a_long_random_secret_key_value_please",
    "Issuer": "TelegramBulkSender",
    "Audience": "TelegramBulkSender",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Telegram": {
    "ApiId": "",
    "ApiHash": "",
    "PhoneNumber": "",
    "SessionPath": "telegram.session"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
