@page
@model TelegramBulkSender.API.Pages.BroadcastModel
@{
    ViewData["Title"] = "Рассылка";
}
<div class="row g-4">
    <div class="col-lg-4">
        <div class="card card-dark shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Получатели</span>
                <form method="post" asp-page-handler="Sync" class="ms-auto">
                    <button class="btn btn-sm btn-outline-primary">Обновить чаты</button>
                </form>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs" id="recipientTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#chats">Чаты</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#groups">Группы</button>
                    </li>
                </ul>
                <div class="tab-content mt-3">
                    <div class="tab-pane fade show active" id="chats">
                        <div class="form-check" asp-for="Input.SelectedChats" hidden></div>
                        @foreach (var chat in Model.ClientChats)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Input.SelectedChats" value="@chat.Id" id="chat_@chat.Id" />
                                <label class="form-check-label" for="chat_@chat.Id">@chat.Title</label>
                            </div>
                        }
                    </div>
                    <div class="tab-pane fade" id="groups">
                        @foreach (var group in Model.AvailableGroups)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Input.SelectedGroups" value="@group.Id" id="group_@group.Id" />
                                <label class="form-check-label" for="group_@group.Id">@group.Name (@group.Members.Count)</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card card-dark shadow-sm mb-4">
            <div class="card-header">Текст рассылки</div>
            <div class="card-body">
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Текст RU</label>
                            <textarea class="form-control" rows="8" asp-for="Input.TextRu"></textarea>
                            <span asp-validation-for="Input.TextRu" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Текст EN</label>
                            <textarea class="form-control" rows="8" asp-for="Input.TextEn"></textarea>
                            <span asp-validation-for="Input.TextEn" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <div class="d-flex gap-2 flex-wrap">
                                <button class="btn btn-success" type="submit">Отправить</button>
                                <button class="btn btn-outline-secondary" asp-page-handler="Template" formmethod="post">Выбрать шаблон</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card card-dark shadow-sm">
            <div class="card-header">Последние рассылки</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped align-middle mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Дата</th>
                                <th>Чатов</th>
                                <th>Успех</th>
                                <th>Ошибки</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var broadcast in Model.RecentBroadcasts)
                            {
                                <tr>
                                    <td>@broadcast.Id</td>
                                    <td>@broadcast.CreatedAt.ToLocalTime()</td>
                                    <td>@broadcast.TotalChats</td>
                                    <td class="text-success">@broadcast.SuccessCount</td>
                                    <td class="text-danger">@broadcast.FailedCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

