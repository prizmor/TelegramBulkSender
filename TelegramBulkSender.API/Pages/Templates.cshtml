@page
@model TelegramBulkSender.API.Pages.TemplatesModel
@{
    ViewData["Title"] = "Шаблоны";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Шаблоны сообщений</h1>
</div>
<div class="row g-4">
    <div class="col-lg-5">
        <div class="card card-dark">
            <div class="card-header">Создание шаблона</div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Название</label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" asp-for="Input.IsGlobal" />
                        <label class="form-check-label" asp-for="Input.IsGlobal">Глобальный шаблон (виден всем пользователям)</label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.TextRu" class="form-label">Текст RU</label>
                        <textarea asp-for="Input.TextRu" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.TextEn" class="form-label">Текст EN</label>
                        <textarea asp-for="Input.TextEn" class="form-control" rows="4"></textarea>
                    </div>
                    <button class="btn btn-primary w-100">Создать</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card card-dark">
            <div class="card-header">Доступные шаблоны</div>
            <div class="list-group list-group-flush">
                @foreach (var template in Model.Templates)
                {
                    <div class="list-group-item bg-transparent">
                        <form method="post" asp-page-handler="Update" class="mb-2">
                            <input type="hidden" name="id" value="@template.Id" />
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="flex-grow-1 me-3">
                                    <label class="form-label mb-1 small">Название</label>
                                    <input name="name" class="form-control form-control-sm" value="@template.Name" />
                                    <div class="text-muted small mt-1">@(template.IsGlobal ? "Глобальный" : "Личный")</div>
                                </div>
                                <button class="btn btn-sm btn-outline-primary align-self-start mt-4">Сохранить</button>
                            </div>
                            <div class="mb-2">
                                <label class="form-label mb-1 small">Текст RU</label>
                                <textarea name="textRu" class="form-control form-control-sm" rows="2">@template.TextRu</textarea>
                            </div>
                            <div>
                                <label class="form-label mb-1 small">Текст EN</label>
                                <textarea name="textEn" class="form-control form-control-sm" rows="2">@template.TextEn</textarea>
                            </div>
                        </form>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Удалить шаблон?');">
                            <input type="hidden" name="id" value="@template.Id" />
                            <button class="btn btn-sm btn-outline-danger">Удалить</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

