@page
@model TelegramBulkSender.API.Pages.ChatGroupsModel
@{
    ViewData["Title"] = "Группы чатов";
}
<h1 class="h3 mb-3">Группы чатов</h1>
<div class="row g-4">
    <div class="col-lg-4">
        <div class="card card-dark">
            <div class="card-header">Новая группа</div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.IsGlobal" />
                            <label class="form-check-label" asp-for="Input.IsGlobal">Глобальная группа</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Чаты</label>
                        <select multiple class="form-select" asp-for="Input.ChatIds">
                            @foreach (var chat in Model.AllChats)
                            {
                                <option value="@chat.Id">@chat.Title</option>
                            }
                        </select>
                    </div>
                    <button class="btn btn-primary w-100">Создать</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card card-dark">
            <div class="card-header">Существующие группы</div>
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тип</th>
                            <th>Чатов</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model.Groups)
                        {
                            <tr>
                                <td>@group.Name</td>
                                <td>@(group.IsGlobal ? "Глобальная" : "Пользовательская")</td>
                                <td>@group.Members.Count</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Удалить группу?');">
                                        <input type="hidden" name="id" value="@group.Id" />
                                        <button class="btn btn-sm btn-outline-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
