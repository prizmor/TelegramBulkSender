@page
@model TelegramBulkSender.API.Pages.ChatGroupsModel
@{
    ViewData["Title"] = "Группы чатов";
}
<h1 class="h3 mb-3">Группы чатов</h1>
<div class="row g-4">
    <div class="col-lg-4">
        <div class="card card-dark">
            <div class="card-header">@(Model.Input.Id.HasValue ? "Редактирование группы" : "Создание группы")</div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label">Название</label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.IsGlobal" disabled="@(Model.Input.Id.HasValue ? "disabled" : null)" />
                            <label class="form-check-label" asp-for="Input.IsGlobal">Глобальная группа (доступна всем пользователям)</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Чаты (используются только клиентские чаты)</label>
                        <select multiple class="form-select" asp-for="Input.ChatIds">
                            @foreach (var chat in Model.AllChats)
                            {
                                <option value="@chat.Id" selected="@(Model.Input.ChatIds.Contains(chat.Id))">@chat.Title</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-primary">@((Model.Input.Id.HasValue ? "Сохранить" : "Создать"))</button>
                        @if (Model.Input.Id.HasValue)
                        {
                            <a class="btn btn-outline-secondary" href="/ChatGroups">Отмена</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="card card-dark">
            <div class="card-header">Существующие группы</div>
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тип</th>
                            <th>Чатов</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in Model.Groups)
                        {
                            <tr>
                                <td>@group.Name</td>
                                <td>@(group.IsGlobal ? "Глобальная" : "Личная")</td>
                                <td>@group.Members.Count</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-2" href="/ChatGroups?id=@group.Id">Редактировать</a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Удалить группу?');">
                                        <input type="hidden" name="id" value="@group.Id" />
                                        <button class="btn btn-sm btn-outline-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

