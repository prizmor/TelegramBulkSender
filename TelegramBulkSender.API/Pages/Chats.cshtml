@page
@model TelegramBulkSender.API.Pages.ChatsModel
@{
    ViewData["Title"] = "Чаты";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Чаты</h1>
    <form method="post" asp-page-handler="Sync">
        <button class="btn btn-outline-primary">Синхронизировать чаты с Telegram</button>
    </form>
</div>
<form method="get" class="mb-3">
    <div class="input-group">
        <input name="search" value="@Model.Search" class="form-control" placeholder="Поиск" />
        <button class="btn btn-secondary">Найти</button>
    </div>
</form>
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Тип</th>
                <th>Клиентский</th>
                <th>Системный</th>
                <th>Язык</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chat in Model.Chats)
            {
                <tr>
                    <td>@chat.TelegramChatId</td>
                    <td>@chat.Title</td>
                    <td>@chat.Type</td>
                    <td>
                        <form method="post" asp-page-handler="ToggleClient" class="d-inline">
                            <input type="hidden" name="chatId" value="@chat.Id" />
                            <input type="hidden" name="value" value="@(!chat.IsClient)" />
                            <button class="btn btn-sm @(chat.IsClient ? "btn-success" : "btn-outline-secondary")">@(chat.IsClient ? "Да" : "Нет")</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="ToggleSystem" class="d-inline">
                            <input type="hidden" name="chatId" value="@chat.Id" />
                            <input type="hidden" name="value" value="@(!chat.IsSystemChat)" />
                            <button class="btn btn-sm @(chat.IsSystemChat ? "btn-warning" : "btn-outline-secondary")">@(chat.IsSystemChat ? "Да" : "Нет")</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="Language" class="d-flex gap-2">
                            <input type="hidden" name="chatId" value="@chat.Id" />
                            <select name="language" class="form-select form-select-sm">
                                <option value="" selected="@(string.IsNullOrEmpty(chat.Language))">Не задан</option>
                                <option value="ru" selected="@(chat.Language == "ru")">RU</option>
                                <option value="en" selected="@(chat.Language == "en")">EN</option>
                            </select>
                            <button class="btn btn-sm btn-outline-primary">OK</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

