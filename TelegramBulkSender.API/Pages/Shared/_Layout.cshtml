@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var httpContext = HttpContextAccessor.HttpContext;
    var username = httpContext?.User?.Identity?.Name;
    var isRoot = httpContext?.User?.Claims.Any(c => c.Type == ClaimTypes.Role && c.Value == "Root") == true;
    var currentPath = httpContext?.Request?.Path.Value ?? string.Empty;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Telegram Bulk Sender</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg app-navbar border-bottom mb-4">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold" href="/">Telegram Bulk Sender</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(currentPath.StartsWith("/Broadcast", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/Broadcast">Рассылка</a>
                    </li>
                    @if (isRoot)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentPath.StartsWith("/Chats", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/Chats">Чаты</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link @(currentPath.StartsWith("/ChatGroups", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/ChatGroups">Группы чатов</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentPath.StartsWith("/Templates", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/Templates">Шаблоны</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentPath.StartsWith("/BroadcastHistory", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/BroadcastHistory">История рассылок</a>
                    </li>
                    @if (isRoot)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentPath.StartsWith("/Users", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/Users">Пользователи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPath.StartsWith("/UserLogs", StringComparison.OrdinalIgnoreCase) ? "active" : "")" href="/UserLogs">Логи пользователей</a>
                        </li>
                    }
                </ul>
                <div class="d-flex align-items-center gap-2">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <span class="navbar-text me-2">@username</span>
                        <a class="btn btn-outline-secondary btn-sm" href="/Profile">Мой профиль</a>
                        <a class="btn btn-outline-primary btn-sm" href="/Logout">Выйти</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <main class="container pb-4">
        @RenderBody()
    </main>

    <div id="toast-placeholder" class="toast-container position-fixed top-0 end-0 p-3"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

