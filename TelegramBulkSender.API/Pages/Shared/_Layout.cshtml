@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext?.User?.Identity?.Name;
    var isRoot = HttpContextAccessor.HttpContext?.User?.Claims.Any(c => c.Type == "role" && c.Value == "Root") == true;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Telegram Bulk Sender</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark text-light">
    <header class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-secondary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Telegram Bulk Sender</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Broadcast">Рассылка</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Chats">Чаты</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ChatGroups">Группы</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Templates">Шаблоны</a></li>
                    <li class="nav-item"><a class="nav-link" href="/BroadcastHistory">История</a></li>
                    @if (isRoot)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Users">Пользователи</a></li>
                        <li class="nav-item"><a class="nav-link" href="/UserLogs">Логи</a></li>
                    }
                </ul>
                <span class="navbar-text">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        <span class="me-3">@username</span>
                        <a class="btn btn-outline-light btn-sm" href="/Logout">Выход</a>
                    }
                </span>
            </div>
        </div>
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
