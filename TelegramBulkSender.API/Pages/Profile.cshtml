@page
@model TelegramBulkSender.API.Pages.ProfileModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Смена пароля";
}
<h1 class="h3 mb-3">Смена пароля</h1>
<div class="row">
    <div class="col-md-6">
        <div class="card card-dark">
            <div class="card-header">Смена пароля</div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.CurrentPassword" class="form-label">Текущий пароль</label>
                        <input asp-for="Input.CurrentPassword" class="form-control" />
                        <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label">Новый пароль</label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Подтверждение пароля</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary">Изменить пароль</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

